<% provide(:title, @recipe.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= t('activerecord.attributes.recipe.name') %> <%= @recipe.name %>
      </h1>
      <h2>
        <%= t('activerecord.attributes.recipe.description') %> <%= @recipe.description %>
        <%= t('activerecord.attributes.recipe.time') %> <%= @recipe.time %>
        <%= t('activerecord.attributes.recipe.level') %> <%= @recipe.level %>
      </h2>
      <h3>
        <%= link_to t('delete'), @recipe, method: :delete,
                    data: { confirm: t('you_sure') } %>
        <%= link_to t('edit'), edit_recipe_path(@recipe) %>
      </h3>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @recipe.ingredient_quantities.any? %>
        <h3><%= t('ingredients.index.title') %> (<%= @recipe.ingredient_quantities.count %>)</h3>
        <ol class="ingredient_quantities">
          <%= render @ingredient_quantities %>
        </ol>
        <%= will_paginate @ingredient_quantities %>
    <% end %>
  </div>
</div>

